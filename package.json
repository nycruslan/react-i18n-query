{
  "name": "react-i18n-query",
  "version": "0.0.1-beta.8",
  "type": "module",
  "description": "A lightweight library for i18n query management in React using i18next.",
  "keywords": [
    "i18n",
    "react",
    "i18next",
    "query",
    "internationalization"
  ],
  "author": "Ruslan Shulga <nycruslan@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nycruslan/react-i18n-query.git"
  },
  "homepage": "https://github.com/nycruslan/react-i18n-query#readme",
  "bugs": {
    "url": "https://github.com/nycruslan/react-i18n-query/issues"
  },
  "main": "dist/cjs/react-i18n-query.js",
  "module": "dist/es/react-i18n-query.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/es/react-i18n-query.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/react-i18n-query.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && vite build",
    "lint": "eslint .",
    "publish": "npm publish --access public"
  },
  "peerDependencies": {
    "i18next": "^23.15.1",
    "i18next-http-backend": "^2.6.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "rimraf": "^6.0.1",
    "terser": "^5.34.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.2"
  }
}
